<Project>
  <!--
  Content specific properties
  Import *before* Robust.Properties.targets
  -->

  <PropertyGroup>
    <LangVersion Condition="'$(LangVersion)' == ''">14</LangVersion>
    <IsPackable Condition="'$(IsPackable)' == ''">false</IsPackable>
    <Nullable Condition="'$(Nullable)' == ''">enable</Nullable>
    <StyleCopSettingsFile Condition="'$(StyleCopSettingsFile)' == ''">$(MSBuildThisFileDirectory)..\stylecop.json</StyleCopSettingsFile>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" PrivateAssets="all" />
  </ItemGroup>

<!--  Disable some StyleCop rules that aren't applicable.-->
  <PropertyGroup>
    <NoWarn>$(NoWarn);SA1309;SA1101;SA1503;SA1633;SA1401;SA1402;SA1133;SA1516;SA1623;SA1130;SA1134;SA0001;SA1201;SA1642</NoWarn>
  </PropertyGroup>
</Project>
