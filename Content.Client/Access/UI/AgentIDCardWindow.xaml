<controls:FancyWindow xmlns="https://spacestation14.io"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:s="clr-namespace:Content.Client.Stylesheets"
            xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
            xmlns:pda="clr-namespace:Content.Client.PDA"
            xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
            Title="{Loc agent-id-ui-menu-title}"
            MinSize="740 400" Resizable="True">
    <BoxContainer Orientation="Vertical" Margin="12 0" SeparationOverride="4" VerticalExpand="False" >

        <!-- Header: ID status -->
        <BoxContainer Orientation="Horizontal" Margin="0 12 0 4" MinHeight="80" >
            <!-- Job Icon -->
            <PanelContainer> <!-- Inset aesthetics -->
                <PanelContainer.PanelOverride>
                    <gfx:StyleBoxFlat BorderThickness="1" BorderColor="#444444" BackgroundColor="{x:Static s:StyleNano.PanelDark}" />
                </PanelContainer.PanelOverride>
                    <TextureRect Margin="4" Name="CurrentJobIcon" Stretch="KeepAspectCentered"
                        VerticalAlignment="Center" HorizontalAlignment="Center" SetSize="64 64" />
            </PanelContainer>
            <!-- Name and Job -->
            <BoxContainer Margin="8 4 0 0" Orientation="Vertical">
                <Label Name="CurrentName" SetHeight="24" StyleClasses="LabelBig" FontColorOverride="{x:Static s:StyleNano.NanoGold}" />
                <Label Name="CurrentJob" Margin="8 4 0 0" />
            </BoxContainer>
        </BoxContainer>
        <PanelContainer Margin="0 4" StyleClasses="LowDivider" />

         <!-- Inset screen aesthetics -->
        <PanelContainer MinHeight="220" VerticalExpand="True" >
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BorderThickness="1" BorderColor="#444444" BackgroundColor="#000000" />
            </PanelContainer.PanelOverride>

            <PanelContainer Name="ScreenOS" Margin="4" >
                <PanelContainer.PanelOverride>
                    <gfx:StyleBoxFlat BackgroundColor="{x:Static s:StyleNano.PanelDark}" />
                </PanelContainer.PanelOverride>

                <!-- Tabs --> <!-- TODO don't use pda buttons -->
                <BoxContainer Orientation="Vertical" >
                    <BoxContainer Orientation="Horizontal" HorizontalExpand="True" MinHeight="32" >
                        <pda:PdaNavigationButton Name="SettingsTabButton" MinWidth="100" CurrentTabBorderThickness="0 0 2 0" IsCurrent="True"  LabelText="{Loc 'agent-id-ui-tab-settings'}" />
                        <pda:PdaNavigationButton Name="JobIconTabButton"  MinWidth="100" LabelText="{Loc 'agent-id-ui-tab-job-icons'}" />
                    </BoxContainer>

                    <!-- Settings tab -->
                    <!-- TODO reserve scrollbar -->
                    <ScrollContainer Name="TabSettings" ReturnMeasure="True" >
                        <BoxContainer Margin="4" Orientation="Vertical" >
                            <Label Margin="8 0" Text="{Loc 'agent-id-ui-input-name'}" />
                            <LineEdit Name="NameLineEdit" Margin="0 2" SelectAllOnFocus="True" />
                            <Label Margin="8 0" Text="{Loc 'agent-id-ui-input-job'}" />
                            <LineEdit Name="JobLineEdit" Margin="0 2" SelectAllOnFocus="True" />
                            <CheckBox Name="CheckCopyAll" Margin="0 12 0 0" Text="{Loc 'agent-id-ui-check-copy-all'}" />
                            <BoxContainer Orientation="Vertical" Margin="24 4 0 0">
                                <CheckBox Name="CheckCopyName" Pressed="True" Text="{Loc 'agent-id-ui-check-copy-name'}" />
                                <CheckBox Name="CheckCopyJob" Pressed="True" Text="{Loc 'agent-id-ui-check-copy-job'}" />
                                <CheckBox Name="CheckCopyJobIcon" Pressed="True" Text="{Loc 'agent-id-ui-check-copy-job-icon'}" />
                                <CheckBox Name="CheckCopyAccess" Text="{Loc 'agent-id-ui-check-copy-access'}" />
                            </BoxContainer>
                        </BoxContainer>
                    </ScrollContainer>

                    <!-- Job icon tab -->
                    <BoxContainer Name="TabJobIcon" Margin="4" Orientation="Horizontal" VerticalExpand="True" >
                            <ScrollContainer ReturnMeasure="True">
                                <GridContainer Name="JobGroupGrid" Columns="6" />
                                    <!-- Group buttons are generated in code -->
                            </ScrollContainer>
                            <!-- TODO Replace with simple line --> <PanelContainer Margin="4 0" HorizontalExpand="True" StyleClasses="LowDivider" />
                            <PanelContainer>
                                <PanelContainer.PanelOverride>
                                    <gfx:StyleBoxFlat BorderThickness="2" BackgroundColor="#000000" BorderColor="#FFFFFF" />
                                </PanelContainer.PanelOverride>
                                <BoxContainer Margin="4" SetWidth="104" VerticalExpand="True" >
                                    <ScrollContainer ReturnMeasure="True" HScrollEnabled="False" >
                                        <GridContainer Name="IconGrid" Columns="3" />
                                        <!-- Job icon buttons are generated in code -->
                                    </ScrollContainer>
                                </BoxContainer>
                            </PanelContainer>
                    </BoxContainer>

                    <controls:StripeBack HasBottomEdge="False" >
                        <Label Text="{Loc 'agent-id-ui-os'}" VerticalAlignment="Center" Margin="6 2" StyleClasses="PdaContentFooterText"/>
                        <Label Text="{Loc 'agent-id-ui-os-flavor'}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="6 2" StyleClasses="PdaContentFooterText"/>
                    </controls:StripeBack>
                </BoxContainer>
            </PanelContainer>
        </PanelContainer>

        <!-- Footer -->
        <BoxContainer Orientation="Vertical">
            <PanelContainer StyleClasses="LowDivider" />
            <BoxContainer Orientation="Horizontal" Margin="10 2 5 0" VerticalAlignment="Bottom">
                <Label Text="{Loc 'agent-id-ui-footer-flavor-left'}" StyleClasses="WindowFooterText" />
                <Label Text="{Loc 'agent-id-ui-footer-flavor-right'}" StyleClasses="WindowFooterText"
                        HorizontalAlignment="Right" HorizontalExpand="True"  Margin="0 0 5 0" />
                <TextureRect StyleClasses="NTLogoDark" Stretch="KeepAspectCentered"
                        VerticalAlignment="Center" HorizontalAlignment="Right" SetSize="19 19"/>
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
