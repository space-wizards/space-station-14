<controls:FancyWindow xmlns="https://spacestation14.io"
                xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
                xmlns:system="clr-namespace:System;assembly=System.Runtime"
                Title="{Loc 'abandon-character-window-title'}"
                Resizable="False" >
    <BoxContainer Orientation="Vertical" VerticalExpand="True" Margin="12 6 12 6">
        <Label Name="Description" Text="{Loc 'abandon-character-warning'}" VerticalAlignment="Top"/>
        <Control HorizontalExpand="True" HorizontalAlignment="Stretch">
            <BoxContainer Margin="5" HorizontalAlignment="Center" Align="Center" >
                <cc:CommandButton Name="SuicideButton"
                                  Command="suicide"
                                  Text="{Loc 'sandbox-window-toggle-suicide-button'}" >
                    <cc:CommandButton.StyleClasses>
                        <system:String>OpenRight</system:String>
                        <system:String>negative</system:String>
                    </cc:CommandButton.StyleClasses>
                </cc:CommandButton>
                <controls:VSpacer Spacing="2" />
                <cc:CommandButton Name="GhostButton"
                                  Command="ghost"
                                  Text="{Loc 'sandbox-window-ghost-button'}" >
                    <cc:CommandButton.StyleClasses>
                        <system:String>OpenLeft</system:String>
                        <system:String>negative</system:String>
                    </cc:CommandButton.StyleClasses>
                </cc:CommandButton>
            </BoxContainer>
            <Button Name="CancelButton" Text="{Loc 'quick-dialog-ui-cancel'}" Margin="5" HorizontalAlignment="Right"/>
        </Control>
    </BoxContainer>
</controls:FancyWindow>
