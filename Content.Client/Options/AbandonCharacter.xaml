<controls:FancyWindow xmlns="https://spacestation14.io"
                xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
                Title="{Loc 'abandon-character-window-title'}"
                Resizable="False"
                MinWidth="550">
    <BoxContainer Orientation="Vertical" Margin="10">
        <Label Name="Description"
               Text="{Loc 'abandon-character-warning'}"
               Access="Public"
               Margin="10"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"/>
        <BoxContainer Name="AbandonMethodContainer"
                      Orientation="Horizontal"
                      Margin="10"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Bottom"
                      HorizontalExpand="True">
            <cc:CommandButton Name="SuicideButton"
                              Command="suicide"
                              Text="{Loc 'sandbox-window-toggle-suicide-button'}"
                              Access="Public"
                              StyleClasses="OpenRight"
                              SetWidth="100" />
            <controls:VSpacer Spacing="2" />
            <cc:CommandButton Name="GhostButton"
                              Command="ghost"
                              Text="{Loc 'sandbox-window-ghost-button'}"
                              Access="Public"
                              StyleClasses="ButtonSquare"
                              SetWidth="100" />
            <controls:VSpacer Spacing="2" />
            <Button Name="CancelButton" Text="{Loc 'quick-dialog-ui-cancel'}" StyleClasses="OpenLeft" SetWidth="100" />
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
