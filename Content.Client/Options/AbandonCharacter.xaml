<controls:FancyWindow xmlns="https://spacestation14.io"
                xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                Title="{Loc 'abandon-character-window-title'}"
                Resizable="False"
                MinWidth="550">
    <BoxContainer Orientation="Vertical" Margin="10">
        <Label Name="Description"
               Text="{Loc 'abandon-character-warning'}"
               Access="Public"
               Margin="10"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"/>
        <BoxContainer Name="AbandonMethodContainer"
                      Orientation="Horizontal"
                      Margin="10"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Bottom"
                      HorizontalExpand="True">
            <Button Name="SuicideButton" Text="{Loc 'sandbox-window-toggle-suicide-button'}" Access="Public" MinWidth="100" StyleClasses="ButtonSquare" />
            <controls:VSpacer Spacing="100" />
            <Button Name="GhostButton" Text="{Loc 'sandbox-window-ghost-button'}" Access="Public" MinWidth="100" StyleClasses="ButtonSquare" />
        </BoxContainer>
        <BoxContainer Name="AbandonConfirmContainer"
                      Orientation="Horizontal"
                      Margin="10"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Bottom"
                      Visible="False">
            <Button Name="ConfirmAbandonButton" Text="{Loc 'generic-confirm'}" StyleClasses="OpenRight" MinWidth="100" />
            <Button Name="CancelAbandonButton" Text="{Loc 'quick-dialog-ui-cancel'}" StyleClasses="OpenLeft" MinWidth="100" />
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
