<DefaultWindow
    xmlns="https://spacestation14.io"
    MinSize="430 180"
    Title="{Loc color-shift-window-title}">
    <BoxContainer Orientation="Vertical" SeparationOverride="4" Margin="4 4 4 4">
        <ColorSelectorSliders
            Name="ColorSelector"
            IsAlphaVisible="False"
            SelectorType="Hsv" />
        <Button
            Name="HueshiftButton"
            Text="{Loc color-shift-window-button-submit}" />
    </BoxContainer>
</DefaultWindow>
