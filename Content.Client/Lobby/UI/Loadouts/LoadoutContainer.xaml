<BoxContainer Name="Container"
              xmlns="https://spacestation14.io"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              Orientation="Vertical"
              Margin="2.2"
              HorizontalExpand="True"
              VerticalExpand="True"
              SizeFlagsStretchRatio ="5"
              MinHeight="100">

        <Button Name="SelectButton"
                ToggleMode="True"
                StyleClasses="ItemButton"
                HorizontalExpand="True"
                VerticalExpand="True">

            <BoxContainer Orientation="Vertical"
                          HorizontalExpand="True"
                          VerticalExpand="True">

                <SpriteView Name="Sprite"
                            MouseFilter="Ignore"
                            HorizontalAlignment="Center"
                            HorizontalExpand="True"
                            VerticalExpand="True"
                            Scale="3 3"/>
            </BoxContainer>
        </Button>
</BoxContainer>
