<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      xmlns:employeeData="clr-namespace:Content.Client.SpecializationConsole.EmployeeData"
                      Title="{Loc 'computer-spec-title'}"
                      SetSize="575 330">
    <BoxContainer Orientation="Vertical"
                  HorizontalExpand="True">
        <BoxContainer Orientation="Vertical"
                      VerticalExpand="True">
            <GridContainer Columns="2"
                           Margin="8"
                           VerticalExpand="True">
                <PanelContainer Name="TargetingControlsPanel"
                                VerticalExpand="True"
                                HorizontalExpand="True">
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
                    </PanelContainer.PanelOverride>
                    <BoxContainer Orientation="Vertical"
                                  VerticalExpand="True"
                                  Margin="8">
                        <PanelContainer>
                            <GridContainer Columns="2">
                                <PanelContainer StyleClasses="Inset"
                                                HorizontalExpand="True">
                                    <BoxContainer Orientation="Vertical">
                                        <Label Text="{Loc 'computer-spec-priveleged-id'}"
                                               StyleClasses="LabelKeyText" />
                                        <BoxContainer HorizontalAlignment="Left">
                                            <Button Name="PrivilegedIdButton"
                                                                   Access="Public"
                                                                   SetSize="33 33"
                                                                   StyleClasses="ButtonIdCard">
                                                <SpriteView Name="EntityView"
                                                            Access="Public"
                                                            Stretch="None"
                                                            Scale="1.5 1.5"
                                                            RectClipContent="False"/>
                                            </Button>
                                        </BoxContainer>
                                    </BoxContainer>
                                </PanelContainer>
                                <PanelContainer StyleClasses="Inset"
                                                HorizontalExpand="True"
                                                Margin="6 0 0 0">
                                    <BoxContainer Orientation="Vertical">
                                        <Label Text="{Loc 'computer-spec-target-id'}"
                                               StyleClasses="LabelKeyText" />
                                        <BoxContainer HorizontalAlignment="Left">
                                            <Button Name="TargetIdButton"
                                                    Access="Public"
                                                    SetSize="33 33"
                                                    StyleClasses="ButtonIdCard">
                                                <SpriteView Name="TargetEntityView"
                                                            Access="Public"
                                                            Stretch="None"
                                                            Scale="1.5 1.5"
                                                            RectClipContent="False"/>
                                            </Button>
                                        </BoxContainer>
                                    </BoxContainer>
                                </PanelContainer>
                            </GridContainer>
                        </PanelContainer>
                        <PanelContainer StyleClasses="Inset"
                                        Margin="0 10 0 0"
                                        SetSize="260 70">
                            <BoxContainer>
                                <Label Text="{Loc 'computer-spec-access'}" />
                                <BoxContainer Name="AccessBox"
                                              Orientation="Vertical"
                                              HorizontalExpand="True"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center">
                                    <!-- C# -->
                                </BoxContainer>
                            </BoxContainer>
                        </PanelContainer>
                        <PanelContainer StyleClasses="Inset"
                                        Margin="0 10 0 0">
                            <BoxContainer Orientation="Vertical">
                                <Label Text="{Loc 'computer-spec-specialization'}" />
                                <LineEdit Name="SpecializationLineEdit"
                                          Margin="0 5 0 5"/>
                            </BoxContainer>
                        </PanelContainer>
                    </BoxContainer>
                </PanelContainer>
                <BoxContainer Name="Sssss"
                              HorizontalExpand="True"
                              VerticalExpand="True"
                              Orientation="Vertical"
                              Margin="4 0 0 0">
                    <PanelContainer>
                        <controls:StripeBack HorizontalExpand="True">
                            <BoxContainer HorizontalExpand="True"
                                          HorizontalAlignment="Center">
                                <Label Text="{Loc 'computer-spec-employee-data'}"
                                       StyleClasses="LabelBig" />
                            </BoxContainer>
                        </controls:StripeBack>
                    </PanelContainer>
                    <PanelContainer VerticalExpand="True" StyleClasses="PanelDark">
                        <employeeData:EmployeeData Name="EmployeeInfo"
                                                   Access="Public" />
                    </PanelContainer>
                </BoxContainer>
            </GridContainer>
        </BoxContainer>
        <!-- Footer -->
        <BoxContainer Orientation="Vertical">
            <PanelContainer StyleClasses="LowDivider" />
            <BoxContainer Orientation="Horizontal">
                <Label Text="⚠"
                       Margin="0 0 4 4"
                       HorizontalExpand="True"
                       HorizontalAlignment="Right"
                       Modulate="#FFD700"
                       StyleClasses="WindowFooterText" />
                <Label Name="Footer"
                       Text="{Loc 'computer-spec-window-footer'}"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 4"
                       Modulate="#FFCC66"
                       StyleClasses="WindowFooterText" />
                <Label Text="⚠"
                       Margin="4 0 0 4"
                       HorizontalExpand="True"
                       HorizontalAlignment="Left"
                       Modulate="#FFD700"
                       StyleClasses="WindowFooterText" />
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
