<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:ui="clr-namespace:Content.Client.Atmos.UI"
               xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
               MinSize="270 350"
               Title="{Loc 'gas-analyzer-window-name'}"
               Resizable="False">
    <BoxContainer Orientation="Vertical"
                  Margin="5 5 5 5">

        <Label Name="ErrorText"
               StyleClasses="negative"/>

        <TabContainer Name="Tabs"
                      VerticalExpand="True"
                      Margin="1 1 1 2">

            <!-- Device tab -->
            <ScrollContainer HorizontalExpand="True"
                             VerticalExpand="True">
                <BoxContainer Name="DevicesTabContents"
                              Orientation="Vertical">

                    <!-- Header with icon -->
                    <BoxContainer Orientation="Horizontal"
                                  HorizontalExpand="True"
                                  Align="Center"
                                  RectClipContent="True">
                        <SpriteView Name="DeviceIcon"
                                    MinSize="32 32"
                                    Margin="4"
                                    OverrideDirection="East"/>
                        <Label Name="DeviceName"/>
                    </BoxContainer>

                    <!-- Contents -->
                    <GridContainer Name="DeviceMixes"
                                   Columns="1"
                                   HorizontalExpand="True"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"/>
                </BoxContainer>
            </ScrollContainer>

            <!-- Environment tab -->
            <ScrollContainer VerticalExpand="True"
                             HScrollEnabled="False">
                <PanelContainer Name="EnvironmentTabContent"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="4">
                    <PanelContainer.PanelOverride>
                         <gfx:StyleBoxFlat BorderThickness="1" BorderColor="#4f4f4f"/>
                    </PanelContainer.PanelOverride>

                    <ui:GasAnalyzerControl Name="EnvironmentMix"
                                           Margin="8"/>
                </PanelContainer>
            </ScrollContainer>

        </TabContainer>
    </BoxContainer>
</DefaultWindow>
