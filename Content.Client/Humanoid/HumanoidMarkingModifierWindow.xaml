<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:humanoid="clr-namespace:Content.Client.Humanoid"
               Title="{Loc 'marking-modifier-window-title'}">
    <ScrollContainer MinHeight="500" MinWidth="700">
        <BoxContainer Orientation="Vertical">
            <!-- Picker itself -->
            <humanoid:MarkingPicker Name="MarkingPickerWidget" />
            <!-- Admeme override buttons (on by default for maximum admeme speed) -->
            <BoxContainer SeparationOverride="10">
                <CheckBox Name="MarkingForced" Text="{Loc 'marking-modifier-forced'}" Pressed="True" />
                <CheckBox Name="MarkingIgnoreSpecies" Text="{Loc 'marking-modifier-ignore-species'}" Pressed="True" />
            </BoxContainer>
            <!-- Layer override controls -->
            <Collapsible>
                <CollapsibleHeading Title="{Loc 'marking-modifier-base-layers'}" />
                <CollapsibleBody>
                    <BoxContainer Name="BaseLayersContainer" Orientation="Vertical" />
                </CollapsibleBody>
            </Collapsible>
        </BoxContainer>
    </ScrollContainer>
</DefaultWindow>
