<cartridges:NanoTaskUiFragment xmlns:cartridges="clr-namespace:Content.Client.CartridgeLoader.Cartridges"
                               xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                               xmlns="https://spacestation14.io" Margin="1 0 2 0">

    <PanelContainer StyleClasses="BackgroundDark"></PanelContainer>
    <TabContainer Name="TabsCategory" Visible="False">
        <TabContainer Name="TabsDepartmentTask">
        </TabContainer>
        <cartridges:NanoTaskTable Name="StationTaskTable" />
    </TabContainer>

    <BoxContainer Name="ConnectionBox" Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True"
                  Align="Center">
        <Label Text="{Loc 'nano-task-ui-connection'}" />
    </BoxContainer>

    <BoxContainer Visible="False" Name="OfflineBox" Orientation="Vertical" HorizontalExpand="True"
                  VerticalExpand="True" Align="Center">
        <PanelContainer HorizontalExpand="True" Name="OfflinePanel">
            <Label Name="OfflineLabel" Text="{Loc 'nano-task-ui-offline'}" HorizontalAlignment="Center" Align="Center" />
        </PanelContainer>
    </BoxContainer>
</cartridges:NanoTaskUiFragment>
