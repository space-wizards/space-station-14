<ui:FileMidiSource xmlns="https://spacestation14.io"
                                xmlns:ui="clr-namespace:Content.Client.Instruments.UI"
                                HorizontalExpand="True"
                                Orientation="Vertical">
    
    <!-- Track list -->
    <BoxContainer Orientation="Vertical" VerticalExpand="True" HorizontalExpand="True" Margin="0 0 0 20">
        <Label Text="Tracks" />
        <ItemList Name="TrackList" SelectMode="Single" VerticalExpand="True" />
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <Button Name="AddButton" Text="Add" HorizontalExpand="True" />
            <Button Name="RenameButton" Text="Rename" HorizontalExpand="True" />
            <Button Name="RemoveButton" Text="Remove" HorizontalExpand="True" />
        </BoxContainer>
    </BoxContainer>

    <!-- Current track label -->
    <Label Name="CurrentTrackLabel"></Label>
    
    <!-- Track position -->
    <Slider Name="PlaybackSlider" HorizontalExpand="True" />
    
    <!-- Track controls -->
    <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
        <Button Name="PlayButton" Text="Play/Stop" ToggleMode="True" />
        <Button Name="LoopButton" Text="Loop" ToggleMode="True" />
        <Button Name="ShuffleButton" Text="Shuffle" ToggleMode="True" />
        <BoxContainer HorizontalExpand="True" />
        <Label Name="TimeLabel" Text="--:--/--:--" Align="Right"/>
    </BoxContainer>
</ui:FileMidiSource>
