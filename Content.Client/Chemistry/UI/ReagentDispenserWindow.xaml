<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      xmlns:ui="clr-namespace:Content.Client.Chemistry.UI"
                      Title="{Loc 'reagent-dispenser-bound-user-interface-title'}"
                      MinSize="600 300"
                      SetSize="800 500">
    <BoxContainer>
        <!-- Keypad looking thing of amount buttons -->
        <BoxContainer Orientation="Vertical" MinWidth="170">
            <Label Text="{Loc 'reagent-dispenser-window-amount-to-dispense-label'}"
                   HorizontalAlignment="Center" />
            <ui:ButtonGrid Name="AmountGrid"
                           Access="Public"
                           RadioGroup="True"
                           Columns="3"
                           HorizontalAlignment="Center"
                           Margin="5" />

            <!-- Container label + amount filled-->
            <Label Name="ContainerInfoName"
                   Access="Public"
                   VerticalExpand="True"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Center" />
            <Label Name="ContainerInfoFill"
                   Access="Public"
                   HorizontalAlignment="Center"
                   StyleClasses="LabelSubText" />

            <!-- Container sprite -->
            <SpriteView Name="View"
                        Scale="4 4"
                        HorizontalAlignment="Center" />

            <!-- Clear/eject buttons-->
            <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="ClearButton"
                        Text="{Loc 'reagent-dispenser-window-clear-button'}"
                        Access="Public"
                        StyleClasses="OpenRight" />
                <Button Name="EjectButton"
                        Text="{Loc 'reagent-dispenser-window-eject-button'}"
                        Access="Public"
                        StyleClasses="OpenLeft" />
            </BoxContainer>
        </BoxContainer>

        <!-- Right side of dispenser -->
        <SplitContainer Orientation="Vertical" HorizontalExpand="True">
            <!-- List of reagents -->
            <ScrollContainer HScrollEnabled="False"
                             VerticalExpand="True"
                             MinHeight="50"
                             SizeFlagsStretchRatio="2.5">
                <GridContainer Name="ReagentList" Access="Public" Columns="3" />
            </ScrollContainer>

            <!-- Container contents -->
            <ScrollContainer HScrollEnabled="False"
                             VerticalExpand="True"
                             MinHeight="50">
                <PanelContainer>
                    <PanelContainer.PanelOverride>
                        <gfx:StyleBoxFlat BackgroundColor="#1b1b1e" />
                    </PanelContainer.PanelOverride>
                    <BoxContainer Name="ContainerInfo"
                                  Orientation="Vertical"
                                  VerticalExpand="True"
                                  Margin="5">
                        <Label Text="{Loc 'reagent-dispenser-window-no-container-loaded-text'}" />
                    </BoxContainer>
                </PanelContainer>
            </ScrollContainer>
        </SplitContainer>
    </BoxContainer>
</controls:FancyWindow>
