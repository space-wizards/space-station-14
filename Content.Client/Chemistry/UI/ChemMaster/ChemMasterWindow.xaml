<controls:FancyWindow xmlns="https://spacestation14.io"
                xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                MinSize="620 670"
                Title="{Loc 'chem-master-bound-user-interface-title'}">
    <TabContainer Name="Tabs" Margin="5 5 7 5">
        <BoxContainer Orientation="Vertical" Margin="5" SeparationOverride="10">
            <!-- Input container info -->
            <BoxContainer>
                <Label Text="{Loc 'chem-master-window-container-label'}" />
                <Button Name="InputEjectButton" Text="{Loc 'chem-master-window-eject-button'}" Access="Public"
                        HorizontalExpand="True" HorizontalAlignment="Right" MinSize="80 0" />
            </BoxContainer>

            <PanelContainer VerticalExpand="True">
                <PanelContainer.PanelOverride>
                    <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
                </PanelContainer.PanelOverride>

                <ScrollContainer HorizontalExpand="True" MinSize="0 200">
                    <BoxContainer Name="InputContainerInfo" Orientation="Vertical" Margin="4" />
                </ScrollContainer>
            </PanelContainer>

            <!-- Buffer -->
            <BoxContainer Margin="0 10 0 0">
                <Label Text="{Loc 'chem-master-window-buffer-text'}" />
                <Button Name="BufferTransferButton" Text="{Loc 'chem-master-window-transfer-button'}" Access="Public"
                        ToggleMode="True" StyleClasses="OpenRight" HorizontalExpand="True" HorizontalAlignment="Right" />
                <Button Name="BufferSortButton" Text="{Loc 'chem-master-window-sort-type-none'}" Access="Public"
                        StyleClasses="OpenBoth" />
                <Button Name="BufferDiscardButton" Text="{Loc 'chem-master-window-discard-button'}" Access="Public"
                        ToggleMode="True" StyleClasses="OpenLeft" />
            </BoxContainer>

            <!-- Buffer info -->
            <PanelContainer VerticalExpand="True">
                <PanelContainer.PanelOverride>
                    <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
                </PanelContainer.PanelOverride>

                <ScrollContainer MinSize="0 200">
                    <!-- Buffer reagent list -->
                    <BoxContainer Name="BufferInfo" Orientation="Vertical" Margin="4" />
                </ScrollContainer>
            </PanelContainer>
        </BoxContainer>

        <BoxContainer Orientation="Vertical" Margin="5" SeparationOverride="10">
            <!-- Output container info -->
            <BoxContainer>
                <Label Text="{Loc 'chem-master-window-container-label'}" />
                <Button Name="OutputEjectButton" Text="{Loc 'chem-master-window-eject-button'}" Access="Public"
                        HorizontalExpand="True" HorizontalAlignment="Right" MinSize="80 0" />
            </BoxContainer>

            <PanelContainer VerticalExpand="True" MinSize="0 200">
                <PanelContainer.PanelOverride>
                    <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
                </PanelContainer.PanelOverride>

                <ScrollContainer HorizontalExpand="True" MinSize="0 200">
                    <BoxContainer Name="OutputContainerInfo" Orientation="Vertical" Margin="4" />
                </ScrollContainer>
            </PanelContainer>

            <!-- Packaging -->
            <BoxContainer Margin="0 10 0 0">
                <Label Text="{Loc 'chem-master-window-packaging-text'}" />
                <Label Text="{Loc 'chem-master-window-buffer-label'}"
                       HorizontalExpand="True" HorizontalAlignment="Right" />
                <Label Name="BufferCurrentVolume" StyleClasses="LabelSecondaryColor" />
            </BoxContainer>

            <!-- Wrap the packaging info-->
            <PanelContainer>
                <PanelContainer.PanelOverride>
                    <gfx:StyleBoxFlat BackgroundColor="#1B1B1E" />
                </PanelContainer.PanelOverride>

                <!-- Packaging Info -->
                <GridContainer Columns="2" Margin="4" VerticalExpand="True">
                    <!-- Label for output -->
                    <Label Text="{Loc 'chem-master-current-text-label'}" />
                    <LineEdit Name="LabelLineEdit" SetWidth="455"
                              HorizontalAlignment="Right" HorizontalExpand="True"/>

                    <!-- Pill sprite buttons -->
                    <Label Text="{Loc 'chem-master-window-pill-type-label'}"/>
                    <!-- Pills type buttons are inserted into here -->
                    <GridContainer Name="Grid" Columns="10" HorizontalAlignment="Right" HorizontalExpand="True" />

                    <!-- Pill count/dosage -->
                    <Label Text="{Loc 'chem-master-window-pills-label'}" />
                    <BoxContainer HorizontalExpand="True" HorizontalAlignment="Right" SeparationOverride="5">
                        <Label Text="{Loc 'chem-master-window-pills-number-label'}" StyleClasses="LabelSecondaryColor" />
                        <SpinBox Name="PillNumber" Access="Public" />
                        <Label Text="{Loc 'chem-master-window-dose-label'}" StyleClasses="LabelSecondaryColor" />
                        <SpinBox Name="PillDosage" Access="Public" Value="1" />
                        <Button Name="CreatePillButton" Text="{Loc 'chem-master-window-create-button'}" Access="Public" />
                    </BoxContainer>

                    <!-- Bottle dosage -->
                    <Label Text="{Loc 'chem-master-window-bottles-label'}" />
                    <BoxContainer HorizontalAlignment="Right" HorizontalExpand="True" SeparationOverride="5">
                        <Label Text="{Loc 'chem-master-window-dose-label'}" StyleClasses="LabelSecondaryColor" />
                        <SpinBox Name="BottleDosage" Access="Public" />
                        <Button Name="CreateBottleButton" Text="{Loc 'chem-master-window-create-button'}"
                                Access="Public" />
                    </BoxContainer>
                </GridContainer>
            </PanelContainer>
        </BoxContainer>
    </TabContainer>
</controls:FancyWindow>
