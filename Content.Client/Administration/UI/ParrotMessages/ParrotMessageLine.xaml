<BoxContainer xmlns="https://spacestation14.io"
              xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
              Orientation="Vertical">
    <BoxContainer Orientation="Horizontal">
        <BoxContainer HorizontalExpand="True"></BoxContainer>
        <Label Name="ParrotRoundLabel" Text="{Loc parrot-messages-line-current-round}" Visible="False"></Label>
        <cc:HSeparator Margin="4 0" />
        <Button Name="ParrotMessagePlayerButton" Text="Player" ToolTip="{Loc 'parrot-messages-line-ahelp-tooltip'}"></Button>
        <cc:HSeparator Margin="4 0" />
        <Label Name="ParrotMessageDate"></Label>
        <cc:HSeparator Margin="4 0" />
        <Button Name="ParrotBlockButton" Text="Block" Access="Public" ToolTip="{Loc 'parrot-messages-line-block-tooltip'}" MinWidth="100"></Button>
    </BoxContainer>
    <RichTextLabel Name="ParrotMessageText"></RichTextLabel>
    <cc:VSeparator Margin="0 2"></cc:VSeparator>
</BoxContainer>
